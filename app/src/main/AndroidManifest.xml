<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.AppPedido"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity


        android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.apppedidos.frontend.activities.repartidor.RepartidorListActivity"
            android:theme="@style/Base.Theme.AppPedido"/>

        <activity android:name="com.example.apppedidos.frontend.activities.repartidor.RepartidorRegisterActivity"
            android:theme="@style/Base.Theme.AppPedido"/>

        <activity android:name="com.example.apppedidos.frontend.activities.cliente.RegistroClienteActivity"
            android:theme="@style/Base.Theme.AppPedido"/>

        <activity android:name=".frontend.activities.cliente.ListaClientesActivity"
            android:theme="@style/Base.Theme.AppPedido"/>

        <activity android:name="com.example.apppedidos.frontend.activities.menu.MenuActivity"
            android:theme="@style/Base.Theme.AppPedido"/>

        <activity android:name="com.example.apppedidos.frontend.activities.restaurante.ListaRestaurantesActivity"
            android:theme="@style/Base.Theme.AppPedido"/>

        <activity android:name="com.example.apppedidos.frontend.activities.restaurante.ListaCombosActivity"
            android:theme="@style/Base.Theme.AppPedido"/>

        <activity android:name="com.example.apppedidos.frontend.activities.restaurante.RegistroRestauranteActivity"
            android:theme="@style/Base.Theme.AppPedido"/>

        <activity android:name=".frontend.activities.restaurante.RegistrarComboActivity"
            android:theme="@style/Base.Theme.AppPedido"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>